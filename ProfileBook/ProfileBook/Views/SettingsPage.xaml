             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ProfileBook.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Сортировать по:"/>
            <RadioButton Text="по дате добалвения в базу данных"
